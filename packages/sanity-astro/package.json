{
  "name": "@avioma/sanity-astro",
  "version": "3.2.11",
  "description": "AVIOMA's Sanity Astro integration",
  "keywords": [
    "astro-integration",
    "withastro",
    "sanity"
  ],
  "homepage": "https://www.sanity.io/plugins/sanity-astro",
  "bugs": {
    "url": "https://github.com/AVIOMA/sanity-astro/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/AVIOMA/sanity-astro.git",
    "directory": "packages/sanity-astro"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/sanity-astro.mjs",
      "default": "./dist/sanity-astro.mjs"
    },
    "./module": "./module.d.ts",
    "./studio/studio-route.astro": "./dist/studio/studio-route.astro",
    "./studio/studio-route-hash.astro": "./dist/studio/studio-route-hash.astro",
    "./studio/studio-component": {
      "types": "./dist/types/studio/studio-component.d.ts",
      "import": "./dist/studio-component.mjs",
      "default": "./dist/studio-component.mjs"
    },
    "./visual-editing": "./dist/visual-editing/visual-editing.astro"
  },
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "src/studio",
    "src/visual-editing",
    "module.d.ts"
  ],
  "scripts": {
    "build": "rimraf dist && vite build && pnpm copy:astro-files",
    "clean": "rimraf dist && rimraf .turbo && rimraf node_modules",
    "copy:astro-files": "mkdir -p dist/studio dist/visual-editing && cp src/studio/*.astro dist/studio/ && cp src/visual-editing/*.astro dist/visual-editing/ && sed -i '' \"s|from './visual-editing-component'|from '../visual-editing-component.mjs'|g\" dist/visual-editing/visual-editing.astro && sed -i '' \"s|from './studio-component'|from '../studio-component.mjs'|g\" dist/studio/*.astro",
    "dev": "vite build --watch",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@sanity/visual-editing": "^2.15.2",
    "history": "^5.3.0",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@sanity/client": "^7.6.0",
    "@types/serialize-javascript": "^5.0.4",
    "@vitejs/plugin-react": "^5.1.1",
    "astro": "5.11.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sanity": "^4.0.0",
    "serialize-javascript": "^6.0.2",
    "type-fest": "^4.41.0",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "@sanity/client": "^7.6.0",
    "astro": "^2.0.0 || ^3.0.0 || ^4.0.0 || ^5.0.0",
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0",
    "react-is": "^18.2.0 || ^19.0.0",
    "sanity": "^3.99.0 || ^4.0.0",
    "styled-components": "^6.1.19"
  },
  "engines": {
    "node": ">=18.14.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
